
@{
    ViewBag.Title = "New Course Offering";
}

<div class="row">

    <div class="col-md-2">  </div>

    <div class="col-md-8">
        <div class="panel panel-flat">
            <div class="panel-heading">
                <h5 class="panel-title">New Course Offering</h5>
                <div class="heading-elements">

                </div>

                <div class="panel-body">
                    <form>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Semester</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option selected>Fall</option>
                                <option>Spring</option>
                                <option>Summer</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Year</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option selected>2018</option>


                                <option>2019</option>
                                <option>2020</option>
                                <option>2021</option> 

                            </select>
                        </div>

                        <div class="form-group">
                            <label>Select with search</label>
                            <select class="select-search">

                                <option value="AZ">CMPS 212</option>
                                <option value="CO">CMPS 253</option>
                                <option value="ID">CMPS 297R</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Classroom</label>
                            <select class="form-control" id="exampleFormControlSelect1">
                                <option>Nicely 212</option>
                                <option>Bliss 205</option>

                            </select>
                        </div>

                        <div class="form-group">
                            <label>Section Number</label>
                            <input type="number" placeholder="Section Number" class="form-control" />
                        </div>



                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>

            </div>
            </div>
        </div>
        <div class="col-md-2">  </div>

    </div>

<script>
    // Default initialization
    $('.select-search').select2({
        minimumResultsForSearch: Infinity
    });


    // Select with search
    $('.select-search').select2();

</script>

